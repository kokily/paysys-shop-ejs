<% include ../partials/header %>

<div class="main-container dark-translucent-bg"
  style="margin-top: 80px;background-image: url('/assets/images/background-img-6.jpg');"
>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-auto">

        <div class="main hc-element-invisible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
          <div class="form-block p-30 light-gray-bg border-clear">
            <h2 class="title">사원등록</h2>

            <form action="/auth/register" method="post" class="form-horizontal">
              <div class="form-group has-feedback row">
                <label for="username" class="col-md-3 control-label text-md-right col-form-label">
                  이 름 <span class="text-danger small">*</span>
                </label>
                <div class="col-md-8">
                  <input type="text" class="form-control" id="username" name="username" autoFocus />
                  <i class="fa fa-user form-control-feedback pr-4"></i>
                </div>
              </div>

              <div class="form-group has-feedback row">
                <label for="password" class="col-md-3 control-label text-md-right col-form-label">
                  비밀번호 <span class="text-danger small">*</span>
                </label>
                <div class="col-md-8">
                  <input type="password" class="form-control" id="password" name="password" />
                  <i class="fa fa-lock form-control-feedback pr-4"></i>
                </div>
              </div>

              <div class="form-group has-feedback row">
                <label for="passwordConfirm" class="col-md-3 control-label text-md-right col-form-label">
                  비밀번호 확인 <span class="text-danger small">*</span>
                </label>
                <div class="col-md-8">
                  <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" />
                  <i class="fa fa-lock form-control-feedback pr-4"></i>
                </div>
              </div>

              <div class="form-group has-feedback row">
                <label for="employee" class="col-md-3 control-label text-md-right col-form-label">
                  사원번호 <span class="text-danger small">*</span>
                </label>
                <div class="col-md-8">
                  <input type="text" class="form-control" id="employee" name="employee" />
                  <i class="fa fa-amazon form-control-feedback pr-4"></i>
                </div>
              </div>

              <div class="form-group row">
                <div class="ml-md-auto col-md-9">
                  <button type="submit" class="btn btn-group btn-default btn-animated">
                     사원등록 <i class="fa fa-check"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>